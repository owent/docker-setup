# MinIO 环境配置文件
# 如果使用此配置文件，在 docker-compose.yml 中设置:
# MINIO_CONFIG_ENV_FILE=/etc/config.env

# 管理员账号 - 请修改为强密码
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=adminPassword123!

# 服务器 URL 配置 - 用于反向代理
# S3 API 地址，不设置MINIO_SERVER_URL让内网走不加密地址更高效
# MINIO_SERVER_URL=https://it-s3.example.org:6023
# Console 地址 (使用独立域名，直接访问根路径)
MINIO_BROWSER_REDIRECT_URL=https://it-s3-console.example.org:6023
MINIO_CONSOLE_TLS_SKIP_VERIFY=on # 让 Console 内部请求跳过 SSL 验证

# 区域设置
MINIO_REGION=cn-east-1

# 时区
TZ=Asia/Shanghai

# 数据目录
MINIO_VOLUMES=/data/disk{1...4}/minio

# 压缩设置 (可选)
# MINIO_COMPRESSION_ENABLE=on
# MINIO_COMPRESSION_EXTENSIONS=.txt,.log,.csv,.json,.tar,.xml,.bin

# 对象锁定 (可选 - 用于合规性)
# MINIO_OBJECT_LOCKING_ENABLED=on

# 版本控制 (可选)
# 需要在创建 bucket 时启用

# API 限流 (可选)
# MINIO_API_REQUESTS_MAX=100
# MINIO_API_REQUESTS_DEADLINE=10s

# 日志级别 (可选)
# MINIO_LOGGER_CONSOLE_LEVEL=info

# 监控 (Prometheus)
# MINIO_PROMETHEUS_AUTH_TYPE=public
# MINIO_PROMETHEUS_URL=http://prometheus:9090

# 通知配置示例 (Webhook)
# MINIO_NOTIFY_WEBHOOK_ENABLE_target1=on
# MINIO_NOTIFY_WEBHOOK_ENDPOINT_target1=http://localhost:8080/webhook

# 身份验证 (LDAP/OIDC)
# MINIO_IDENTITY_LDAP_SERVER_ADDR=ldap.example.org:636
# MINIO_IDENTITY_OPENID_CONFIG_URL=https://auth.example.org/.well-known/openid-configuration
